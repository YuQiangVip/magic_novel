<div class="container">
  <h1>添加QQ信息发送</h1>
  <div>
    <%= form_for(@notifications, html:{ class: "form-horizontal"}) do |f| %>
      <div class="form-group">
        <label class="col-sm-2 control-label">标题</label>
        <div class="col-sm-10">
           <%= f.text_field :title, class:"form-control", require: true%>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">内容</label>
        <div class="col-sm-10">
           <%= f.text_area :body, class:"form-control", require: true%>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">推送时间</label>
        <div class="col-sm-10">
          <%= text_field_tag :remind_at, params[:remind_at], class:"form-control datepicker"%>
        </div>
      </div>
      <%= f.submit '提交', class: "btn btn-primary float-r" %>
    <% end %>
  </div>
</div>