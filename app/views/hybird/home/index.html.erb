<div class="container">
	<div class="row">
	    <div class="col-sm-12 book-main">
	        <div class="container">
	          <span><h2>TOP9</h2>
	          <ul class="nav nav-tabs" role="tablist">
	            <li role="presentation" class="active"><%=link_to '所有小说', tab_books_hybird_home_index_path(book_type: ""), remote: true %></li>
	            <li role="presentation"><%=link_to '原创', tab_books_hybird_home_index_path(book_type: Book::CUSTOM), remote: true %></li>
	            <li role="presentation"><%=link_to '转载', tab_books_hybird_home_index_path(book_type: Book::REPRINT), remote: true %></li>
	          </ul>
