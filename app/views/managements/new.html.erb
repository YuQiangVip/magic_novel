<div class="container">
  <h1>添加书籍</h1>
  <div>
    <%= form_tag(managements_path, class: "form-horizontal") do  %>
        <div class="form-group">
          <label class="col-sm-2 control-label">URL</label>
          <div class="col-sm-10">
            <%= text_field_tag :url, '', class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label">跳过章节(输入章节名 以,隔开)</label>
          <div class="col-sm-10">
            <%= text_area_tag :skip_titles,  '',{ class: "form-control h-250" }%>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-2">
          </div>
          <%= submit_tag '提交', class: "btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>