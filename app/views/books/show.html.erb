<div class="container volume">
  <div class="book-show-volume-manage">
    <h1><%= @book.title %></h1>
    <div class="float-r ">
    <% if have_author_authority?(@book) %>
        <%= link_to '卷标管理', book_book_volumes_path(@book), class: 'btn btn-sm btn-primary'%>
        <%= link_to '添加新的章节', new_book_book_chapter_path(@book), class: 'btn btn-sm btn-primary', 'data-no-turbolink' => true %>
    <% end %>
    <% if have_do_authority?(@book) %>
          <% if @collection.present? %>
            <%= link_to '取消收藏', uncollection_book_path(@book), class: 'btn btn-sm btn-primary'%>
          <% else %>
            <%= link_to '收藏本书', collection_book_path(@book), class: 'btn btn-sm btn-primary'%>
          <% end %>
    <% end %>
    </div>
    <span>作者:<%= @book.author.name %></span>
  </div>

  <div class="bg-white pad-10">
    &nbsp;&nbsp;&nbsp;&nbsp;简介：<%= @book.introduction %>
  </div>

  <div class="bg-white pad-5">
    <div class="row">
      <% @book.book_chapters.where(book_volume_id: nil).each do |chapter| %>
          <%= link_to book_book_chapter_path(@book, chapter) do%>
              <div class="col-md-3 margint-5px col-md-6 h-72">
                <%= chapter.title  %>
              </div>
          <% end %>
      <% end %>
    </div>
    <% @book_volumns.each do |volume| %>
        <div class="row align-center"><%= volume.title %></div>
        <div class="row">
          <% volume.book_chapters.each do |chapter| %>
              <%= link_to  book_book_chapter_path(@book, chapter) do%>
                  <div class="col-md-3 margint-5px col-md-6 h-72">
                    <%= chapter.title %>
                  </div>
              <% end %>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
