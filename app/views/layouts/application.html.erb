  <script>
      window.faye_push_url = "<%= faye_push_uri %>";
      window.faye_push_access_token = "<%= faye_push_token %>";
      window.temp_access_token = "<%= current_user.try(:temp_access_token) %>";
      window.faye_client_js_url = '<%= CROSS_SITES[:faye_push][:host] %>/faye/client.js';

  </script>
  <title><%= @page_title %></title>
  <%#= stylesheet_link_tag 'bootstrap', media: 'all', 'data-turbolinks-track' => true, type: "text/css", charset: 'utf-8' %>
